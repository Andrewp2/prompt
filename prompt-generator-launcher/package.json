{
  "name": "prompt-generator-launcher",
  "displayName": "Prompt Generator Launcher",
  "description": "Launch Prompt Generator from a folder context menu, Explorer header button, and status bar.",
  "version": "0.1.4",
  "publisher": "apeterson",
  "engines": {
    "vscode": "^1.97.0"
  },
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:promptGenerator.open",
    "onCommand:promptGenerator.openHere"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptGenerator.open",
        "title": "Open in Prompt Generator",
        "icon": "$(rocket)"
      },
      {
        "command": "promptGenerator.openHere",
        "title": "Open Prompt Generator (Workspace)",
        "icon": "$(rocket)"
      }
    ],
    "keybindings": [
      {
        "command": "promptGenerator.openHere",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "workbenchState != 'empty'"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "promptGenerator.open",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ],
      "explorer/title": [
        {
          "command": "promptGenerator.openHere",
          "when": "explorerViewletVisible",
          "group": "navigation@10"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://example.com/apeterson/prompt-generator-launcher.git"
  },
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^22.13.2",
    "@types/vscode": "^1.97.0",
    "typescript": "^5.7.3"
  }
}